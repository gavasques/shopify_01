<section class="custom-section color-{{ section.settings.color_scheme }}">
  <div class="custom-section__wrapper page-width">
    {% for block in section.blocks %}
      <div class="custom-section__block" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'heading' %}
            <h2 class="custom-section__heading {{ block.settings.heading_size }}">{{ block.settings.heading }}</h2>
          {% when 'text' %}
            <div class="custom-section__text rte">{{ block.settings.text }}</div>
          {% when 'button' %}
            <a href="{{ block.settings.button_link }}" class="button button--{{ block.settings.button_style }}">{{ block.settings.button_label }}</a>
          {% when 'image' %}
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.image.alt | escape }}" class="custom-section__image" width="800" loading="lazy">
            {% endif %}
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .custom-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    text-align: {{ section.settings.text_alignment }};
  }
  .custom-section__wrapper {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
  }
  .custom-section__heading {
    margin-bottom: 1rem;
  }
  .custom-section__text {
    margin-bottom: 1.5rem;
  }
  .custom-section__image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }
</style>

{% schema %}
{
  "name": "Custom section",
  "class": "section-custom",
  "settings": [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "default": 800,
      "label": "Content width",
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding top",
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding bottom",
      "unit": "px"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "scheme-1", "label": "Scheme 1" },
        { "value": "scheme-2", "label": "Scheme 2" },
        { "value": "scheme-3", "label": "Scheme 3" }
      ],
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Section heading" },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            { "value": "h3", "label": "Small" },
            { "value": "h2", "label": "Medium" },
            { "value": "h1", "label": "Large" }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        { "type": "richtext", "id": "text", "label": "Text", "default": "<p>Add your content here.</p>" }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        { "type": "text", "id": "button_label", "label": "Button label", "default": "Learn more" },
        { "type": "url", "id": "button_link", "label": "Button link" },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" }
          ],
          "default": "primary"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom section"
    }
  ]
}
{% endschema %}
