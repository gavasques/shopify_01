<section class="main-page color-{{ section.settings.color_scheme }}">
  <div class="main-page__wrapper page-width">
    {% if section.settings.show_page_title %}
      <h1 class="main-page__title h2">{{ page.title }}</h1>
    {% endif %}
    
    {% if page.content != blank %}
      <div class="main-page__content rte">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .main-page {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  .main-page__wrapper {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
  }
  .main-page__title {
    text-align: {{ section.settings.title_alignment }};
    margin-bottom: 2rem;
  }
  .main-page__content {
    line-height: 1.8;
  }
  .main-page__content h2,
  .main-page__content h3,
  .main-page__content h4 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .main-page__content p {
    margin-bottom: 1rem;
  }
  .main-page__content ul,
  .main-page__content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .main-page__content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }
</style>

{% schema %}
{
  "name": "Page content",
  "class": "section-main-page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_page_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "default": 800,
      "label": "Content width",
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding top",
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding bottom",
      "unit": "px"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "scheme-1", "label": "Scheme 1" },
        { "value": "scheme-2", "label": "Scheme 2" },
        { "value": "scheme-3", "label": "Scheme 3" }
      ],
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Page content"
    }
  ]
}
{% endschema %}
