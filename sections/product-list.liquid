<section class="product-list color-{{ section.settings.color_scheme }}">
  <div class="product-list__wrapper page-width">
    {% if section.settings.heading != blank %}
      <h2 class="product-list__heading {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="product-list__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="product-list__grid grid grid--{{ section.settings.columns }}-col">
      {% if section.settings.collection != blank %}
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.featured_image.alt | escape }}" class="product-card__image" width="400" loading="lazy">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__image placeholder' }}
                {% endif %}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title h5">{{ product.title }}</h3>
                <p class="product-card__price">{{ product.price | money }}</p>
              </div>
            </a>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card">
            <div class="product-card__image-wrapper">
              {{ 'product-1' | placeholder_svg_tag: 'product-card__image placeholder' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title h5">{{ 'general.onboarding.product_title' | t }}</h3>
              <p class="product-card__price">{{ 9999 | money }}</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection != blank %}
      <div class="product-list__view-all">
        <a href="{{ section.settings.collection.url }}" class="button button--secondary">{{ 'general.collection.view_all' | t }}</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .product-list {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  .product-list__heading,
  .product-list__subheading {
    text-align: center;
  }
  .product-list__heading {
    margin-bottom: 0.5rem;
  }
  .product-list__subheading {
    margin-bottom: 2rem;
    opacity: 0.8;
  }
  .product-list__grid {
    display: grid;
    gap: 2rem;
  }
  .product-list__grid.grid--2-col { grid-template-columns: repeat(2, 1fr); }
  .product-list__grid.grid--3-col { grid-template-columns: repeat(3, 1fr); }
  .product-list__grid.grid--4-col { grid-template-columns: repeat(4, 1fr); }
  @media (max-width: 768px) {
    .product-list__grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 480px) {
    .product-list__grid { grid-template-columns: 1fr; }
  }
  .product-card {
    background: var(--color-background);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
  }
  .product-card__link {
    text-decoration: none;
    color: inherit;
  }
  .product-card__image-wrapper {
    aspect-ratio: 1;
    overflow: hidden;
  }
  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .product-card__info {
    padding: 1rem;
  }
  .product-card__title {
    margin-bottom: 0.5rem;
  }
  .product-list__view-all {
    text-align: center;
    margin-top: 2rem;
  }
</style>

{% schema %}
{
  "name": "Product list",
  "class": "section-product-list",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured products"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding top",
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding bottom",
      "unit": "px"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "scheme-1", "label": "Scheme 1" },
        { "value": "scheme-2", "label": "Scheme 2" },
        { "value": "scheme-3", "label": "Scheme 3" }
      ],
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Product list"
    }
  ]
}
{% endschema %}
